@model Website.Models.VendorProgram

@{
    ViewData["Title"] = "Delete Your Post";
}

<div class="delete-post">
    <div class='row justify-content-center'>
        <div class="col-md-5">
            <center>
                <h3>Are you sure you want to delete this post?</h3>
            </center>
            <hr />
            <dl>
                <div class="row">
                    <dd class="col-sm-12">
                        <h4>@Model.Headline</h4>
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-md-6">
                        @Html.DisplayNameFor(model => model.ProgramName)
                    </dt>
                    <dd class="col-md-6">
                        @Html.DisplayFor(model => model.ProgramName)
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-md-6">
                        @Html.DisplayNameFor(model => model.AddedDate)
                    </dt>
                    <dd class="col-md-6">
                        @Html.DisplayFor(model => model.AddedDate)
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-md-6">
                        @Html.DisplayNameFor(model => model.RegistrationStartDate)
                    </dt>
                    <dd class="col-md-6">
                        @Html.DisplayFor(model => model.RegistrationStartDate)
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-md-6">
                        @Html.DisplayNameFor(model => model.RegistrationEndDate)
                    </dt>
                    <dd class="col-md-6">
                        @Html.DisplayFor(model => model.RegistrationEndDate)
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-md-6">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-md-12">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </div>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <br />
                <br />
                <a class="btn btn-spikebee-blue rounded-pill" asp-action="MyPrograms">Back to My Programs</a>
            </form>
        </div>
        <div class="col-md-4">
            <center>
                <div class="bee-profile">
                    <img class="rounded-circle shadow-lg p-1" src="~/images/SpikeBeeImage1.png" />
                </div>
            </center>
        </div>
    </div>
</div>