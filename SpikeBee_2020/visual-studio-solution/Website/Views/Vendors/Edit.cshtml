@model Website.Models.Vendor

@{
    ViewData["Title"] = " here you can update and delete your profile";
}

<center>
    <h2>Welcome @User.Claims.FirstOrDefault(x => x.Type == "FirstName").Value, @ViewData["Title"]</h2>
    <hr />
</center>
<div class='row justify-content-center'>
    <div class="col-md-2">
    </div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Company/ Organization/ Individual Name</label>
                <input asp-for="Name" class="form-control" placeholer="Display Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitNumber" class="control-label">Unit/Apt#</label>
                <input asp-for="UnitNumber" class="form-control" />
                <span asp-validation-for="UnitNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetName" class="control-label">Street Address</label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="row justify-content-center">
            <div class="form-group">
                <a class="btn btn-spikebee-blue rounded-pill" asp-area="Identity" id="change-password" asp-page="/Account/Manage/ChangePassword">Password</a>
                <a class="btn btn-spikebee-blue rounded-pill" asp-area="Identity" id="email" asp-page="/Account/Manage/Email">Email</a>
                <a class="btn btn-spikebee-blue rounded-pill" asp-area="Identity" id="deletepersonal-data" asp-page="/Account/Manage/DeletePersonalData">Delete Profile</a>
            </div>
        </div>
        <br />
    </div>
    <div class="col-md-6">
        <div class="bee-profile">
            <center>
                <img class="rounded-circle shadow-lg p-1" src="~/images/SpikeBeeImage1.png" />
            </center>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
