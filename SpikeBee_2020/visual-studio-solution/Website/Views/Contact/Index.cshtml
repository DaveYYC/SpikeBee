@model Website.Models.ContactUs

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class='row justify-content-md-center'>
    <div class="col-md-4">
        <center>
            <h3>Questions/Comments?</h3>
        </center>
        <hr />
        <br />
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-4">
        <center>
            <h3>Contact Information</h3>
        </center>
        <hr />
        <br />
        <p>
            <h5><strong>SpikeBee</strong></h5>
            <br />
            <address>
                Mailing Address: 123ABC Calgary, AB. A1A-1A1<br />
                (Office ph) 111-111-1111<br />
                (Mobile ph) 111-111-1111<br />
                @*(Fax) 111-111-1111*@
                <br />
            </address>
            @*<strong>Manager: </strong>ADD NAME HERE<br />
            <strong>Assistant Manager: </strong>ADD NAME HERE<br/><br />*@
            <strong>Contact Email: </strong><a href="mailto:contactus@SpikeBee.com">contactus@spikebee.com</a>
            @*<strong>Support: </strong><a href="~/">support@SpikeBee.com</a><br />
            <strong>Marketing: </strong><a href="~/">marketing@SpikeBee.com</a>*@
        </p>
        <br />
        <center>
            <img class="rounded-circle shadow-lg p-1" src="~/images/SpikeBeeImage1.png" width="250" height="250" />
        </center>
        <br />
    </div>
</div>
<center>
    <a class="btn btn-spikebee-blue text-light rounded-pill" href="~/VendorPrograms/HomePage">Back to Home</a>
</center>
<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


