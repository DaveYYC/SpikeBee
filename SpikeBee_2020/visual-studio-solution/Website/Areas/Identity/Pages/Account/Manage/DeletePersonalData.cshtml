@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Download Data / Delete Profile";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="col-md-2">
</div>
<div class="col-md-4">
    <h3>@ViewData["Title"]</h3>
    <hr />
    <br />
    <h5>
        Your profile contains personal data that you have given us.
    </h5>
    <h5>
        This page allows you to download and/or delete that data.
    </h5>
    <br />
    <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
        <button class="btn btn-warning" type="submit">Download Profile Data</button>
    </form>
    <br />
    <div class="alert alert-warning" role="alert">
        <center>
            <p>
                <strong>Deleting this data will permanently remove your profile, and this cannot be recovered.</strong>
            </p>
        </center>
    </div>
    <div>
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <br />
            <button class="btn btn-danger" type="submit">Delete Profile Data</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
